{
  "name": "teamcity-extension-for-vscode",
  "displayName": "teamcity-vccode",
  "description": "TeamCity integrarion for VSCode",
  "version": "0.0.1",
  "publisher": "rugpanov",
  "engines": {
    "vscode": "^1.13.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "*"
  ],
  "main": "./out/src/extension",
  "contributes": {
    "commands": [
      {
        "command": "teamcity.signIn",
        "title": "Signin",
        "category": "TeamCity"
      },
      {
        "command": "teamcity.signOut",
        "title": "Signout",
        "category": "TeamCity"
      },
      {
        "command": "teamcity.selectFilesForRemoteRun",
        "title": "Remote Run. Select Files For Remote Run",
        "category": "TeamCity"
      },
      {
        "command": "teamcity.findSuitableBConfigs",
        "title": "Remote Run. Find Suitable Build Configurations",
        "category": "TeamCity",
        "icon": {
          "light": "resources/icons/light/findsuitable.png",
          "dark": "resources/icons/light/findsuitable.png"
        }
      },
      {
        "command": "teamcity.remoteRun",
        "title": "Remote Run. Run With Chosen Build Configurations",
        "category": "TeamCity",
        "when": " && config.teamcity.remoterun.enabled",
        "icon": {
          "light": "resources/icons/light/remoterun.png",
          "dark": "resources/icons/light/remoterun.png"
        }
      }
    ],
    "views": {
      "explorer": [
        {
          "id": "teamcityExplorer",
          "name": "TeamCity"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "teamcity.findSuitableBConfigs",
          "when": "view == teamcityExplorer",
          "group": "navigation@1"
        },
        {
          "command": "teamcity.remoteRun",
          "when": "view == teamcityExplorer && config.teamcity.remoterun.enabled",
          "group": "navigation@2"
        },
        {
          "command": "teamcity.signIn",
          "when": "view == teamcityExplorer",
          "group": "@1"
        },
        {
          "command": "teamcity.selectFilesForRemoteRun",
          "when": "view == teamcityExplorer",
          "group": "@2"
        },
        {
          "command": "teamcity.findSuitableBConfigs",
          "when": "view == teamcityExplorer",
          "group": "@2"
        },
        {
          "command": "teamcity.remoteRun",
          "when": "view == teamcityExplorer && config.teamcity.remoterun.enabled",
          "group": "@2"
        },
        {
          "command": "teamcity.signOut",
          "when": "view == teamcityExplorer",
          "group": "@3"
        }
      ]
    },
    "configuration": {
      "type": "object",
      "title": "TeamCity extension options",
      "properties": {
        "teamcity.logging.level": {
          "type": "string",
          "description": "Set the logging level for the extension (error, warn, info, debug)."
        },
        "teamcity.show.welcome": {
          "type": "boolean",
          "default": true,
          "description": "Sets whether the extension should show welcome message after the login operation or not."
        },
        "teamcity.creds.url": {
          "type": "string",
          "description": "Sets default url for the Signin operation."
        },
        "teamcity.creds.username": {
          "type": "string",
          "description": "Sets default username for the Signin operation."
        },
        "teamcity.remoterun.enabled": {
          "type": "boolean",
          "default": false,
          "description": "Sets whether the TC build configuration explorer contents RemoteRun button."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "tsc -p ./",
    "compile": "tsc -watch -p ./",
    "postinstall": "node ./node_modules/vscode/bin/install",
    "test": "node ./node_modules/vscode/bin/test"
  },
  "devDependencies": {
    "@types/mocha": "^2.2.32",
    "@types/node": "^6.0.40",
    "@types/xml2js": "^0.0.32",
    "chai": "^3.4.1",
    "electron-rebuild": "^1.6.0",
    "typescript": "^2.0.3",
    "tslint": "^5.6.0",
    "vscode": "^1.0.0"
  },
  "dependencies": {
    "child-process-promise": "^2.2.1",
    "keytar": "^4.0.4",
    "node-forge": "^0.7.1",
    "node-gyp": "^3.6.2",
    "pako": "^1.0.5",
    "request": "^2.81.0",
    "temp": "^0.8.3",
    "xml2js": "^0.4.17",
    "xmlhttprequest": "^1.8.0",
    "xmlrpc": "^1.3.2",
    "winston": "^2.3.1"
  }
}
